<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="mainDialog"
		title="{i18n>LoginTitle}" busy="{viewModel>/busy}" busyIndicatorDelay="0">
		<content>
			<VBox class="sapUiSmallMargin" id="formContainer" >
				<f:SimpleForm id="sfLogin"
					editable="true"
					layout="ColumnLayout"
					title=""
					columnsM="2"
					columnsL="2"
					columnsXL="2">
					<f:content>						
						<Label text="{i18n>User}" />
						<Input id="user" required="true" change="onChange" value="polarissrv" />
						<Label text="{i18n>Password}" />
						<Input id="password" required="true" type="Password" value="23Haina*Pol+" />						
					</f:content>
				</f:SimpleForm>
			</VBox>			
		</content>
		<footer>
			<Toolbar>
				<content>					
					<ToolbarSpacer />
					<Button type="Accept"
							text="Login"
							press=".apiLogin" />
					<Button id="Reject"
						text="Cancelar"
						type="Reject"
						press=".closeApiLogin"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>